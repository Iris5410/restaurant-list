<div class="container mt-5">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="input-group mb-3">
      <span class="input-group-text">Name</span>
      <input type="text" name="name" placeholder="Enter Name" class="form-control" value="{{ restaurant.name }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Category</span>
      <input type="text" name="category" placeholder="Enter Category" class="form-control"
        value="{{ restaurant.category }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Rating</span>
      <input type="text" name="rating" placeholder="Enter Rating" class="form-control" value="{{ restaurant.rating }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Location</span>
      <input type="text" name="location" placeholder="Enter Location" class="form-control"
        value="{{ restaurant.location }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Phone</span>
      <input type="text" name="phone" placeholder="Enter Phone" class="form-control" value="{{ restaurant.phone }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Description</span>
      <input type="text" name="description" placeholder="Enter Description" class="form-control"
        value="{{ restaurant.description }}">
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text">Image</span>
      <input type="text" name="image" placeholder="Enter Image" class="form-control" value="{{ restaurant.image }}">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/" class="btn btn-secondary">Back</a>
  </form>
</div>